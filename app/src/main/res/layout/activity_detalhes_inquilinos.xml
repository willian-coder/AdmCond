<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DetalhesInquilinosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/leituraAnteriorId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Leitura Anterior"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="|" />

        <EditText
            android:id="@+id/leituraAtualId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Leitura Atual"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewConsumoId"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Consumo"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:textColor="@color/vermelho"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/viewTotalId"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Total"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:textColor="@color/vermelho"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/calcularBtnId"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Calcular" />

        <Button
            android:id="@+id/salvaBtnId"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Salvar"
            android:visibility="invisible">

        </Button>

    </LinearLayout>

</LinearLayout>