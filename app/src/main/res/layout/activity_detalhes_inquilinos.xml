<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".DetalhesInquilinosActivity">

    <com.santalu.maskedittext.MaskEditText
        android:id="@+id/dataId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:hint="Data"
        android:inputType="datetime"
        app:met_mask="##/##/####" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/leituraAnteriorId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Leitura Anterior"
            android:inputType="numberDecimal" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/leituraAtualId"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Leitura Atual"
                android:inputType="numberDecimal" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/viewConsumoId"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:hint="Consumo"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/vermelho"
                    android:textSize="25dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/taxaId"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="Taxa"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/metroCubicoId"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="Metro Cubico"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/viewTotalId"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:hint="Total"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:textColor="@color/vermelho"
                        android:textSize="25dp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/contaId"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:hint="Conta"
                            android:inputType="numberDecimal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/viewCondominioId"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:hint="CondomÃ­nio"
                            android:paddingLeft="3dp"
                            android:paddingTop="3dp"
                            android:textColor="@color/vermelho"
                            android:textSize="25dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/calcularBtnId"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Calcular" />

        <Button
            android:id="@+id/salvaBtnId"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Salvar"
            android:visibility="invisible">

        </Button>

    </LinearLayout>

